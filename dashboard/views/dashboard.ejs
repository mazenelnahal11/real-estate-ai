<!DOCTYPE html>
<html lang="en" class="dark">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        'off-white': '#F5F5F0',
                        zinc: {
                            50: '#FAFAFA',
                            100: '#F5F5F5',
                            850: '#1A1A1A',
                            900: '#111111',
                            950: '#000000', // Deep Black
                        },
                        emerald: tailwind.colors.zinc,
                    },
                    animation: {
                        'fade-in-up': 'fadeInUp 0.5s ease-out',
                        'fade-in-up-delay-1': 'fadeInUp 0.5s ease-out 0.1s forwards',
                        'fade-in-up-delay-2': 'fadeInUp 0.5s ease-out 0.2s forwards',
                        'fade-in-up-delay-3': 'fadeInUp 0.5s ease-out 0.3s forwards',
                    },
                    keyframes: {
                        fadeInUp: {
                            '0%': { opacity: '0', transform: 'translateY(10px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        }
                    }
                }
            }
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style type="text/tailwindcss">
        @layer base {
            html {
                font-size: 20px; /* Larger fonts */
            }
        }
    </style>
</head>

<body
    class="bg-off-white dark:bg-zinc-950 text-slate-900 dark:text-zinc-100 min-h-screen p-8 transition-colors duration-300 selection:bg-zinc-500/30">

    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-4 mb-8 animate-fade-in-up">
        <div>
            <h1 class="text-3xl font-bold">Sales Dashboard</h1>
            <p class="text-zinc-500">Real-time lead management and performance analytics</p>
        </div>
        <div class="flex flex-wrap gap-4 w-full md:w-auto">
            <a href="/chat" target="_blank"
                class="flex-1 md:flex-none justify-center px-4 py-2 bg-white dark:bg-zinc-100 hover:bg-zinc-50 dark:hover:bg-white text-zinc-900 rounded-lg text-sm font-medium transition-all border border-zinc-200 shadow-xl hover:shadow-2xl hover:-translate-y-0.5 flex items-center gap-2">
                <svg class="w-4 h-4 text-zinc-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z">
                    </path>
                </svg>
                Launch Chat
            </a>
            <button id="openReportModalBtn"
                class="flex-1 md:flex-none justify-center px-4 py-2 bg-white dark:bg-zinc-800 hover:bg-zinc-100 dark:hover:bg-zinc-700 rounded-lg text-sm font-medium transition-colors border border-zinc-200 dark:border-zinc-700 flex items-center gap-2 shadow-xl">
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z">
                    </path>
                </svg>
                Generate Report
            </button>
            <button id="themeToggle"
                class="px-4 py-2 bg-white dark:bg-zinc-800 hover:bg-zinc-100 dark:hover:bg-zinc-700 rounded-lg text-sm font-medium transition-colors border border-zinc-200 dark:border-zinc-700 flex items-center justify-center gap-2 shadow-xl">
                <!-- Sun Icon (Dark Mode) -->
                <svg class="w-5 h-5 hidden dark:block text-zinc-100" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z">
                    </path>
                </svg>
                <!-- Moon Icon (Light Mode) -->
                <svg class="w-5 h-5 block dark:hidden text-slate-500" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z">
                    </path>
                </svg>
            </button>
            <a href="/logout"
                class="px-4 py-2 bg-red-50 dark:bg-red-900/20 hover:bg-red-100 dark:hover:bg-red-900/40 text-red-600 dark:text-red-400 rounded-lg text-sm font-medium transition-colors border border-red-200 dark:border-red-900/30">
                Logout
            </a>
        </div>
    </div>

    <!-- Metrics Grid -->
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 mb-8 animate-fade-in-up-delay-1">
        <!-- Total Leads -->
        <div
            class="bg-white dark:bg-zinc-900 p-6 rounded-2xl border border-slate-200 dark:border-zinc-800 relative overflow-hidden group transition-colors shadow-2xl dark:shadow-xl">
            <div class="relative z-10">
                <p class="text-zinc-500 text-sm font-medium mb-1">Total Leads</p>
                <h2 class="text-3xl font-bold text-zinc-900 dark:text-white" id="totalLeads">
                    <%= totalLeads %>
                </h2>
                <p class="text-zinc-500 text-sm mt-2 font-medium">All time</p>
            </div>
            <div
                class="absolute top-4 right-4 text-zinc-100 dark:text-zinc-800 group-hover:text-zinc-200 dark:group-hover:text-zinc-700 transition-colors">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z">
                    </path>
                </svg>
            </div>
        </div>

        <!-- Hot Leads -->
        <div
            class="bg-white dark:bg-zinc-900 p-6 rounded-2xl border border-slate-200 dark:border-zinc-800 relative overflow-hidden group transition-colors shadow-2xl dark:shadow-xl">
            <div class="relative z-10">
                <p class="text-zinc-500 text-sm font-medium mb-1">Hot Leads (>75)</p>
                <h2 class="text-3xl font-bold text-zinc-900 dark:text-white" id="hotLeads">
                    <%= hotLeads %>
                </h2>
                <p class="text-zinc-500 text-sm mt-2 font-medium">High Priority</p>
            </div>
            <div
                class="absolute top-4 right-4 text-zinc-100 dark:text-zinc-800 group-hover:text-zinc-200 dark:group-hover:text-zinc-700 transition-colors">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z">
                    </path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
                </svg>
            </div>
        </div>

        <!-- Avg Heat Score -->
        <div
            class="bg-white dark:bg-zinc-900 p-6 rounded-2xl border border-zinc-200 dark:border-zinc-800 relative overflow-hidden group transition-colors shadow-xl">
            <div class="relative z-10">
                <p class="text-zinc-500 text-sm font-medium mb-1">Avg Heat Score</p>
                <h2 class="text-3xl font-bold text-zinc-900 dark:text-white" id="avgHeatScore">
                    <%= avgHeatScore %>
                </h2>
                <p class="text-zinc-500 text-sm mt-2 font-medium">Lead Quality</p>
            </div>
            <div
                class="absolute top-4 right-4 text-zinc-100 dark:text-zinc-800 group-hover:text-zinc-200 dark:group-hover:text-zinc-700 transition-colors">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z">
                    </path>
                </svg>
            </div>
        </div>

        <!-- Projected Revenue -->
        <div
            class="bg-white dark:bg-zinc-900 p-6 rounded-2xl border border-zinc-200 dark:border-zinc-800 relative overflow-hidden group transition-colors shadow-xl">
            <div class="relative z-10">
                <p class="text-zinc-500 text-sm font-medium mb-1">Projected Revenue</p>
                <h2 class="text-3xl font-bold text-zinc-900 dark:text-white" id="projectedRevenue">$<%=
                        projectedRevenue.toLocaleString() %>
                </h2>
                <p class="text-zinc-500 text-sm mt-2 font-medium">Total Pipeline</p>
            </div>
            <div
                class="absolute top-4 right-4 text-zinc-100 dark:text-zinc-800 group-hover:text-zinc-200 dark:group-hover:text-zinc-700 transition-colors">
                <svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                        d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"></path>
                </svg>
            </div>
        </div>
    </div>

    <!-- Charts Section -->
    <div class="grid grid-cols-1 gap-6 mb-8 animate-fade-in-up-delay-2">
        <!-- Lead Quality Score Chart -->
        <div
            class="bg-white dark:bg-zinc-900 p-6 rounded-2xl border border-slate-200 dark:border-zinc-800 transition-colors shadow-2xl dark:shadow-xl">
            <div class="mb-6">
                <h3 class="text-lg font-semibold text-zinc-900 dark:text-white">Lead Quality Score</h3>
                <p class="text-zinc-500 text-sm">24-hour rolling average heat score from processed chats</p>
            </div>
            <div class="h-64">
                <canvas id="heatScoreChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Recent Interactions Table -->
    <div
        class="bg-white dark:bg-zinc-900 rounded-2xl border border-slate-200 dark:border-zinc-800 overflow-hidden transition-colors shadow-2xl dark:shadow-xl flex flex-col animate-fade-in-up-delay-3 hover:shadow-xl hover:border-slate-300 dark:hover:border-zinc-700 duration-300">
        <div
            class="p-6 border-b border-zinc-200 dark:border-zinc-800 flex flex-col md:flex-row justify-between items-start md:items-center gap-4">
            <div>
                <h3 class="text-lg font-semibold text-zinc-900 dark:text-white">Interactions</h3>
                <p class="text-zinc-500 text-sm">Full history of lead interactions</p>
            </div>
            <div class="flex flex-wrap gap-2 items-center">
                <input type="date" id="filterStartDate"
                    class="bg-zinc-50 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-lg px-3 py-1.5 text-sm text-zinc-900 dark:text-zinc-100 focus:outline-none focus:ring-2 focus:ring-emerald-500/50">
                <span class="text-zinc-400 text-sm">to</span>
                <input type="date" id="filterEndDate"
                    class="bg-zinc-50 dark:bg-zinc-800 border border-zinc-200 dark:border-zinc-700 rounded-lg px-3 py-1.5 text-sm text-zinc-900 dark:text-zinc-100 focus:outline-none focus:ring-2 focus:ring-emerald-500/50">
                <button onclick="applyFilters()"
                    class="px-3 py-1.5 bg-zinc-100 dark:bg-zinc-800 hover:bg-zinc-200 dark:hover:bg-zinc-700 text-zinc-700 dark:text-zinc-300 rounded-lg text-sm font-medium transition-colors border border-zinc-200 dark:border-zinc-700">
                    Apply
                </button>
            </div>
        </div>
        <div class="overflow-x-auto max-h-[600px] overflow-y-auto custom-scrollbar">
            <table class="w-full text-left text-sm text-zinc-400">
                <thead
                    class="bg-zinc-50 dark:bg-zinc-950/50 text-zinc-500 dark:text-zinc-200 uppercase text-xs font-semibold sticky top-0 z-10 backdrop-blur-sm">
                    <tr>
                        <th class="px-6 py-4 bg-zinc-50/90 dark:bg-zinc-950/90">Name</th>
                        <th class="px-6 py-4 bg-zinc-50/90 dark:bg-zinc-950/90">Phone</th>
                        <th class="px-6 py-4 bg-zinc-50/90 dark:bg-zinc-950/90">Budget</th>
                        <th class="px-6 py-4 bg-zinc-50/90 dark:bg-zinc-950/90">Heat Score</th>
                        <th class="px-6 py-4 bg-zinc-50/90 dark:bg-zinc-950/90">Call Requested</th>
                        <th class="px-6 py-4 bg-zinc-50/90 dark:bg-zinc-950/90">Summary</th>
                        <th class="px-6 py-4 bg-zinc-50/90 dark:bg-zinc-950/90">Time</th>
                    </tr>
                </thead>
                <tbody class="divide-y divide-zinc-200 dark:divide-zinc-800" id="recentChatsBody">
                    <% recentChats.forEach(chat=> { %>
                        <tr class="hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors cursor-pointer"
                            data-chat-id="<%= chat.chat_id %>">
                            <td class="px-6 py-4 font-medium text-zinc-900 dark:text-white">
                                <%= chat.name || 'Unknown' %>
                            </td>
                            <td class="px-6 py-4">
                                <%= chat.phone || '-' %>
                            </td>
                            <td class="px-6 py-4">
                                <%= chat.budget ? '$' + Number(chat.budget).toLocaleString() : '-' %>
                            </td>
                            <td class="px-6 py-4">
                                <span class="px-2 py-1 rounded-full text-xs font-bold border shadow-xl transition-all
                                <%= chat.heat_score >= 80 ? 'bg-white dark:bg-zinc-100 text-zinc-900 border-zinc-300 dark:border-zinc-100 shadow-md scale-105' : 
                                   chat.heat_score >= 50 ? 'bg-zinc-50 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 border-zinc-200' : 
                                   'bg-zinc-100 dark:bg-zinc-900 text-zinc-500 border-zinc-100' %>">
                                    <%= chat.heat_score || 0 %>
                                </span>
                            </td>
                            <td class="px-6 py-4">
                                <% if (chat.call_requested) { %>
                                    <div class="flex items-center gap-2">
                                        <span
                                            class="px-2 py-1 rounded-full text-xs font-medium bg-white dark:bg-zinc-100 text-zinc-900 border border-zinc-200 shadow-md flex items-center gap-1">
                                            Yes
                                        </span>
                                        <% if (chat.best_call_time) { %>
                                            <span class="text-zinc-400" title="Best time: <%= chat.best_call_time %>">
                                                <svg class="w-4 h-4" fill="none" stroke="currentColor"
                                                    viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round"
                                                        stroke-width="2"
                                                        d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                                </svg>
                                            </span>
                                            <% } %>
                                    </div>
                                    <% } else { %>
                                        <span class="text-zinc-600">-</span>
                                        <% } %>
                            </td>
                            <td class="px-6 py-4 max-w-xs truncate" title="<%= chat.summary %>">
                                <%= chat.summary || '-' %>
                            </td>
                            <td class="px-6 py-4">
                                <%= moment(chat.start_time).format('MMM D, h:mm A') %>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>
        </div>
        <!-- Pagination Controls -->
        <div id="paginationControls"
            class="p-4 border-t border-zinc-200 dark:border-zinc-800 flex justify-center items-center gap-2 bg-white dark:bg-zinc-900">
            <% if (typeof pagination !=='undefined' && pagination) { %>
                <% const { page, totalPages }=pagination; %>

                    <!-- Prev -->
                    <button onclick="changePage(<%= page - 1 %>)"
                        class="px-3 py-1 text-sm rounded-md transition-colors <%= page === 1 ? 'text-zinc-500 cursor-not-allowed hidden' : 'text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800' %>"
                        <%=page===1 ? 'disabled' : '' %>>Prev</button>

                    <% const startPage=Math.max(1, page - 2); const endPage=Math.min(totalPages, page + 2); %>

                        <% if (startPage> 1) { %>
                            <button onclick="changePage(1)"
                                class="px-3 py-1 text-sm rounded-md transition-colors text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800">1</button>
                            <% if (startPage> 2) { %> <span class="px-2 text-zinc-400">...</span>
                                <% } %>
                                    <% } %>

                                        <% for(let i=startPage; i <=endPage; i++) { %>
                                            <button onclick="changePage(<%= i %>)"
                                                class="px-3 py-1 text-sm rounded-md transition-colors <%= i === page ? 'bg-white dark:bg-zinc-100 text-zinc-900 font-bold border border-zinc-300 shadow-2xl scale-105' : 'text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800' %>">
                                                <%= i %>
                                            </button>
                                            <% } %>

                                                <% if (endPage < totalPages) { %>
                                                    <% if (endPage < totalPages - 1) { %> <span
                                                            class="px-2 text-zinc-400">...</span>
                                                        <% } %>
                                                            <button onclick="changePage(<%= totalPages %>)"
                                                                class="px-3 py-1 text-sm rounded-md transition-colors text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800">
                                                                <%= totalPages %>
                                                            </button>
                                                            <% } %>

                                                                <!-- Next -->
                                                                <button onclick="changePage(<%= page + 1 %>)"
                                                                    class="px-3 py-1 text-sm rounded-md transition-colors <%= page >= totalPages ? 'text-zinc-500 cursor-not-allowed hidden' : 'text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800' %>"
                                                                    <%=page>= totalPages ? 'disabled' : ''
                                                                    %>>Next</button>
                                                                <% } %>
        </div>
    </div>



    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Inject Animation Styles
            const style = document.createElement('style');
            style.textContent = `
                @keyframes floatUpFade {
                    0% { transform: translateY(0) scale(1); opacity: 1; }
                    100% { transform: translateY(-20px) scale(0.95); opacity: 0; }
                }
                .animate-float-up {
                    animation: floatUpFade 1.5s ease-out forwards;
                }
            `;
            document.head.appendChild(style);
            // --- Dark Mode Logic ---
            // --- Dark Mode Logic ---
            const themeToggle = document.getElementById('themeToggle');
            const html = document.documentElement;

            // Check saved preference
            if (localStorage.getItem('theme') === 'light') {
                html.classList.remove('dark');
            } else {
                html.classList.add('dark');
            }

            themeToggle.addEventListener('click', () => {
                html.classList.toggle('dark');
                if (html.classList.contains('dark')) {
                    localStorage.setItem('theme', 'dark');
                } else {
                    localStorage.setItem('theme', 'light');
                }
            });

            // --- Chart Logic ---
            const ctx = document.getElementById('heatScoreChart').getContext('2d');
            const gradient = ctx.createLinearGradient(0, 0, 0, 400);
            gradient.addColorStop(0, 'rgba(255, 255, 255, 0.5)');
            gradient.addColorStop(1, 'rgba(255, 255, 255, 0)');

            fetch('/api/chart-data')
                .then(response => response.json())
                .then(chartData => {
                    window.heatScoreChart = new Chart(ctx, {
                        type: 'line',
                        data: {
                            labels: chartData.labels,
                            datasets: [{
                                label: 'Heat Score',
                                data: chartData.data,
                                borderColor: '#d4d4d8', // zinc-300
                                backgroundColor: gradient,
                                borderWidth: 3,
                                tension: 0.4,
                                fill: true,
                                pointBackgroundColor: '#ffffff',
                                pointBorderColor: '#d4d4d8',
                                pointBorderWidth: 2,
                                pointRadius: 4,
                                pointHoverRadius: 6
                            }]
                        },
                        options: {
                            responsive: true,
                            maintainAspectRatio: false,
                            plugins: {
                                legend: { display: false },
                                tooltip: {
                                    enabled: false,
                                    external: function (context) {
                                        // Tooltip Element
                                        let tooltipEl = document.getElementById('chartjs-tooltip');

                                        // Create element on first render
                                        if (!tooltipEl) {
                                            tooltipEl = document.createElement('div');
                                            tooltipEl.id = 'chartjs-tooltip';
                                            document.body.appendChild(tooltipEl);
                                        }

                                        const tooltipModel = context.tooltip;
                                        if (tooltipModel.opacity === 0) {
                                            tooltipEl.style.opacity = 0;
                                            return;
                                        }

                                        // Set Text and Icon
                                        if (tooltipModel.body) {
                                            const dataPoint = context.chart.data.datasets[0].data[tooltipModel.dataPoints[0].dataIndex];

                                            // Professional Fire Icon SVG
                                            const innerHtml = `
                                                <div class="bg-white dark:bg-zinc-900 border border-slate-200 dark:border-zinc-800 rounded-xl shadow-xl p-3 flex items-center gap-3 min-w-[140px]">
                                                    <div class="w-10 h-10 rounded-full bg-orange-500/10 flex items-center justify-center shrink-0">
                                                        <svg class="w-6 h-6 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z"></path>
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.879 16.121A3 3 0 1012.015 11L11 14H9c0 .768.293 1.536.879 2.121z"></path>
                                                        </svg>
                                                    </div>
                                                    <div>
                                                        <p class="text-xs text-slate-500 dark:text-zinc-500 font-medium uppercase tracking-wider">Heat Score</p>
                                                        <p class="text-xl font-bold text-slate-900 dark:text-white">${dataPoint}</p>
                                                    </div>
                                                </div>
                                            `;

                                            tooltipEl.innerHTML = innerHtml;
                                        }

                                        const position = context.chart.canvas.getBoundingClientRect();

                                        // Positioning
                                        tooltipEl.style.opacity = 1;
                                        tooltipEl.style.position = 'absolute';
                                        tooltipEl.style.left = position.left + window.scrollX + tooltipModel.caretX + 'px';
                                        tooltipEl.style.top = position.top + window.scrollY + tooltipModel.caretY + 'px';
                                        tooltipEl.style.transform = 'translate(-50%, -120%)';
                                        tooltipEl.style.pointerEvents = 'none';
                                        tooltipEl.style.zIndex = 100;
                                    }
                                }
                            },
                            scales: {
                                y: {
                                    beginAtZero: true,
                                    max: 100,
                                    grid: { color: '#27272a', drawBorder: false },
                                    ticks: { color: '#71717a' }
                                },
                                x: {
                                    grid: { display: false },
                                    ticks: { color: '#71717a', maxTicksLimit: 8 }
                                }
                            }
                        }
                    });
                })
                .catch(error => console.error('Error loading chart data:', error));

            // --- Real-time Updates & Pagination ---
            let currentPage = 1;

            window.applyFilters = function () {
                currentPage = 1;
                updateDashboard();
            };

            window.changePage = function (page) {
                if (page < 1) return;
                currentPage = page;
                updateDashboard();
            }

            // Helper: Animate Metric Delta
            function updateMetric(elementId, newValue, isCurrency = false) {
                const element = document.getElementById(elementId);
                if (!element) return;

                const currentText = element.textContent.replace(/[^0-9.-]/g, '');
                const currentVal = parseFloat(currentText) || 0;
                const newVal = parseFloat(newValue);

                if (currentVal !== newVal) {
                    const diff = newVal - currentVal;
                    if (diff !== 0) {
                        const delta = document.createElement('span');
                        const prefix = diff > 0 ? '+' : '';
                        const formattedDiff = isCurrency ? '$' + Math.abs(diff).toLocaleString() : Math.abs(diff);

                        delta.textContent = `${prefix}${formattedDiff}`;
                        delta.className = `absolute -top-4 right-0 text-sm font-bold ${diff > 0 ? 'text-emerald-500' : 'text-red-500'} animate-float-up pointer-events-none`;

                        if (element.parentNode.style.position !== 'relative' && !element.parentNode.className.includes('relative')) {
                            element.parentNode.classList.add('relative');
                        }
                        element.parentNode.appendChild(delta);
                        setTimeout(() => delta.remove(), 2000);
                    }
                    element.textContent = isCurrency ? '$' + newVal.toLocaleString() : newVal;
                }
            }

            window.updateDashboard = function () {
                const startDate = document.getElementById('filterStartDate').value;
                const endDate = document.getElementById('filterEndDate').value;

                const params = new URLSearchParams();
                if (startDate) params.append('startDate', startDate);
                if (endDate) params.append('endDate', endDate);
                params.append('page', currentPage);

                Promise.all([
                    fetch(`/api/dashboard-stats?${params.toString()}`).then(res => res.json()),
                    fetch('/api/chart-data').then(res => res.json())
                ]).then(([statsData, chartData]) => {
                    // Update Metrics
                    updateMetric('totalLeads', statsData.totalLeads);
                    updateMetric('hotLeads', statsData.hotLeads);
                    updateMetric('avgHeatScore', statsData.avgHeatScore);
                    updateMetric('projectedRevenue', statsData.projectedRevenue, true);

                    // Update Chart
                    if (window.heatScoreChart) {
                        window.heatScoreChart.data.labels = chartData.labels;
                        window.heatScoreChart.data.datasets[0].data = chartData.data;
                        window.heatScoreChart.update('none'); // Silent update
                    }

                    // Update Table
                    const tbody = document.getElementById('recentChatsBody');
                    const newChats = statsData.recentChats;

                    const html = newChats.map((chat) => {
                        const heatColor = chat.heat_score >= 80 ? 'bg-white dark:bg-zinc-100 text-zinc-900 border-zinc-300 dark:border-zinc-100 shadow-md scale-105' :
                            chat.heat_score >= 50 ? 'bg-zinc-50 dark:bg-zinc-800 text-zinc-700 dark:text-zinc-300 border-zinc-200' :
                                'bg-zinc-100 dark:bg-zinc-900 text-zinc-500 border-zinc-100';

                        const callBadge = chat.call_requested ?
                            `<div class="flex items-center gap-2"><span class="px-2 py-1 rounded-full text-xs font-medium bg-white dark:bg-zinc-100 text-zinc-900 border border-zinc-200 shadow-md flex items-center gap-1">Yes</span>${chat.best_call_time ? '<span class="text-zinc-400" title="Best time: ' + chat.best_call_time + '"><svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path></svg></span>' : ''}</div>` :
                            '<span class="text-zinc-600">-</span>';

                        const date = new Date(chat.start_time);
                        const dateStr = date.toLocaleDateString('en-US', { month: 'short', day: 'numeric' }) + ', ' + date.toLocaleTimeString('en-US', { hour: 'numeric', minute: '2-digit' });

                        return `
                                <tr class="hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors cursor-pointer animate-fade-in-up" data-chat-id="${chat.chat_id}">
                                    <td class="px-6 py-4 font-medium text-zinc-900 dark:text-white">${chat.name || 'Unknown'}</td>
                                    <td class="px-6 py-4">${chat.phone || '-'}</td>
                                    <td class="px-6 py-4">${chat.budget ? '$' + Number(chat.budget).toLocaleString() : '-'}</td>
                                    <td class="px-6 py-4"><span class="px-2 py-1 rounded-full text-xs font-medium ${heatColor}">${chat.heat_score || 0}</span></td>
                                    <td class="px-6 py-4">${callBadge}</td>
                                    <td class="px-6 py-4 max-w-xs truncate" title="${chat.summary}">${chat.summary || '-'}</td>
                                    <td class="px-6 py-4 text-xs text-zinc-500">${dateStr}</td>
                                </tr>
                            `;
                    }).join('');

                    tbody.innerHTML = html;
                    renderPagination(statsData.pagination);
                }).catch(err => console.error("Polling Error:", err));
            }

            function renderPagination(pagination) {
                if (!pagination) return;
                const { page, totalPages } = pagination;
                const container = document.getElementById('paginationControls');

                let html = '';

                // Prev
                html += `<button onclick="changePage(${page - 1})" class="px-3 py-1 text-sm rounded-md transition-colors ${page === 1 ? 'text-zinc-500 cursor-not-allowed hidden' : 'text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800'}" ${page === 1 ? 'disabled' : ''}>Prev</button>`;

                const startPage = Math.max(1, page - 2);
                const endPage = Math.min(totalPages, page + 2);

                if (startPage > 1) {
                    html += `<button onclick="changePage(1)" class="px-3 py-1 text-sm rounded-md transition-colors text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800">1</button>`;
                    if (startPage > 2) html += `<span class="px-2 text-zinc-400">...</span>`;
                }

                for (let i = startPage; i <= endPage; i++) {
                    html += `<button onclick="changePage(${i})" class="px-3 py-1 text-sm rounded-md transition-colors ${i === page ? 'bg-white dark:bg-zinc-100 text-zinc-900 font-bold border border-zinc-300 shadow-2xl scale-105' : 'text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800'}">${i}</button>`;
                }

                if (endPage < totalPages) {
                    if (endPage < totalPages - 1) html += `<span class="px-2 text-zinc-400">...</span>`;
                    html += `<button onclick="changePage(${totalPages})" class="px-3 py-1 text-sm rounded-md transition-colors text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800">${totalPages}</button>`;
                }

                // Next
                html += `<button onclick="changePage(${page + 1})" class="px-3 py-1 text-sm rounded-md transition-colors ${page >= totalPages ? 'text-zinc-500 cursor-not-allowed hidden' : 'text-zinc-700 dark:text-zinc-300 hover:bg-zinc-100 dark:hover:bg-zinc-800'}" ${page >= totalPages ? 'disabled' : ''}>Next</button>`;

                container.innerHTML = html;
            }

            setInterval(updateDashboard, 5000);
        });
    </script>

